---
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../components/widgets/Hero.astro";

const metadata = {
    title: "404 - Página no encontrada",
    description: "La página que buscas no existe.",
    ignoreTitleTemplate: true,
};
---

<BaseLayout {metadata}>
    <Hero
        title={`<h1 class="bg-linear-to-r from-blue-400 via-purple-400 to-pink-400 bg-clip-text text-transparent text-[12rem] font-extrabold tracking-tighter mb-4">404</h1>`}
        description="Lo sentimos, no podemos encontrar la página que buscas. Puede que haya sido movida o eliminada."
        actions={[
            {
                variant: "primary",
                text: "Volver al Inicio",
                href: "/",
                icon: "lucide:home",
            },
            {
                variant: "secondary",
                text: "Contact",
                href: "/contact",
                icon: "lucide:phone",
            },
        ]}
    />
</BaseLayout>
