---
import type { Value } from "../../types/types";
import Card from "../ui/Card.astro";
import Headline from "../ui/Headline.astro";

interface Props {
    items: Value[];
    columns?: 1 | 2 | 3 | 4;
    title?: string;
    subtitle?: string;
    tagline?: string;
}

const { items = [], columns = 2, title, subtitle, tagline } = Astro.props;

const gridCols = {
    1: "grid-cols-1",
    2: "grid-cols-1 md:grid-cols-2",
    3: "grid-cols-1 md:grid-cols-3",
    4: "grid-cols-1 md:grid-cols-4",
};
---

<section class="max-w-7xl mx-auto px-4 pb-24 md:pb-32">
    <Headline
        title={title}
        subtitle={subtitle}
        tagline={tagline}
        classes={{
            container: "max-w-3xl mx-auto text-center",
        }}
    />
    <div class={`grid ${gridCols[columns]} gap-8 text-left`}>
        {
            items.map((item) => (
                <Card>
                    {item.icon && (
                        <div class="mb-4 text-primary text-4xl">
                            <Fragment set:html={item.icon} />
                        </div>
                    )}
                    <h3 class="text-xl font-bold text-foreground mb-2">
                        {item.title}
                    </h3>
                    <p class="text-sm text-muted-foreground">
                        {item.description}
                    </p>
                </Card>
            ))
        }
    </div>
</section>
