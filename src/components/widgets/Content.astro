---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";
import Headline from "../ui/Headline.astro";

interface Props {
    title?: string;
    description?: string[];
    image?: ImageMetadata;
    imageAlt?: string;
    tagline?: string;
    class?: string;
}

const {
    title,
    description = [],
    image,
    imageAlt = "",
    tagline,
    class: className = "",
} = Astro.props;
---

<section class={`max-w-4xl mx-auto px-4 py-24 md:py-32 ${className}`}>
    <div class="text-center">
        <Headline
            title={title}
            subtitle={description.join(" ")}
            tagline={tagline}
            classes={{
                container: "mb-8",
                title: "text-4xl md:text-6xl font-bold mb-2",
                subtitle: "text-lg text-muted-foreground",
            }}
        />
        {
            image && (
                <Image
                    src={image}
                    alt={imageAlt}
                    class="rounded-3xl shadow-2xl mx-auto mt-6 border border-border/50 aspect-video object-cover"
                />
            )
        }
        <slot />
    </div>
</section>
